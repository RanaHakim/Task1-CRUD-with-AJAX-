@model Task1.Models.tblPerson

@{
    ViewBag.Title = "Delete";
}
<script>
        $("#deleteButton").click(function () {
            $.ajax({
                url: "/tblPersons/Delete",
                method: "POST",
                data: $("#deleteForm").serialize()
            }).done(function (response) {
                $("#listingArea").html(response);
            });
        });

</script>

<div class="card" style="margin: 50px 50px 50px 50px">
    <center style="margin-top:20px">
        <h2>Delete</h2>
    </center>
    <div style="margin:20px 30px 15px 30px">

        <h3>Are you sure you want to delete this?</h3>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.NAME)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.NAME)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.PROFESSION)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.PROFESSION)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.DATE)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DATE)
                </dd>

            </dl>

            @using (Html.BeginForm("Delete", "tblPersons", FormMethod.Post, new { id = "deleteForm" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    @Html.HiddenFor(model => model.ID)
                    <input type="button" value="Delete" class="btn btn-danger" id="deleteButton" data-dismiss="modal" />
                </div>
            }
        </div>
        </div>
        </div>